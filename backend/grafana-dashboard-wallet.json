{
  "dashboard": {
    "title": "Wallet Module - Production Monitoring",
    "tags": ["wallet", "financial", "production", "cycles"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Wallet Transaction Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(wallet_transaction_total[5m])",
            "legendFormat": "{{transaction_type}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Transactions/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Wallet Queue Job Status",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "wallet_queue_jobs_total{status=\"waiting\"}",
            "legendFormat": "Waiting - {{job_type}}",
            "refId": "A"
          },
          {
            "expr": "wallet_queue_jobs_total{status=\"active\"}",
            "legendFormat": "Active - {{job_type}}",
            "refId": "B"
          },
          {
            "expr": "wallet_queue_jobs_total{status=\"completed\"}",
            "legendFormat": "Completed - {{job_type}}",
            "refId": "C"
          },
          {
            "expr": "wallet_queue_jobs_total{status=\"failed\"}",
            "legendFormat": "Failed - {{job_type}}",
            "refId": "D"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Jobs"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Wallet Transaction Errors",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(wallet_transaction_errors_total[5m])",
            "legendFormat": "{{error_type}} - {{transaction_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Errors/sec"},
          {"format": "short"}
        ],
        "alert": {
          "name": "High Wallet Error Rate",
          "conditions": [
            {
              "evaluator": {
                "params": [10],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "last"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 4,
        "title": "M-Pesa Reconciliation Status",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(mpesa_reconciliation_success_total[5m])",
            "legendFormat": "Success - {{reconciliation_type}}",
            "refId": "A"
          },
          {
            "expr": "rate(mpesa_reconciliation_failures_total[5m])",
            "legendFormat": "Failures - {{reconciliation_type}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Reconciliations/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Transaction Duration (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, wallet_transaction_duration_seconds_bucket)",
            "legendFormat": "p95 - {{transaction_type}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, wallet_transaction_duration_seconds_bucket)",
            "legendFormat": "p50 - {{transaction_type}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Transaction Amount Distribution",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(wallet_transaction_amounts_bucket[5m])",
            "legendFormat": "{{transaction_type}} - {{le}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "currency", "label": "Amount"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Balance Checks",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "rate(wallet_balance_checks_total[5m])",
            "legendFormat": "Balance Checks/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Checks/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Transaction Types Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "sum by (transaction_type) (rate(wallet_transaction_total[5m]))",
            "legendFormat": "{{transaction_type}}",
            "refId": "A"
          }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  }
}

